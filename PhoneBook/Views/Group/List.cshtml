@model List<Phonebook.Models.DataModels.Group>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Телефонная книга</title>
    </head>
    <body>
        <div>
            <h3>Группы</h3>
            <table>
                <tr>
                    <td><p>Название</p></td>                    
                    <td></td>
                </tr>
                @foreach (var group in Model)
                {
                    <tr>                       
                        <td>
                            <p>
                                @group.Name @Html.ActionLink("Редактировать", "Update", routeValues: new { id = group.Id })
                                @Html.ActionLink("Удалить", "Delete", routeValues: new { id = group.Id })
                            </p>
                        </td>
                    </tr>
                }
            </table>
        </div>
        @Html.ActionLink("Добавить", "Additional", "Group")
    </body>
</html>